{% extends 'base.html.twig' %}

{% block title %}Ingredient{% endblock %}
{% block section %}{% endblock %}

{% block body %}
    <h1>Ingredient</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ingredient.id }}</td>
            </tr>
            <tr>
                <th>NameIngredient</th>
                <td>{{ ingredient.nameIngredient }}</td>
            </tr>
            <tr>
                <th>ItemQuantityIngredient</th>
                <td>{{ ingredient.itemQuantityIngredient }}</td>
            </tr>
            <tr>
                <th>UnitIngredient</th>
                <td>{{ ingredient.unitIngredient }}</td>
            </tr>
            <tr>
                <th>CostIngredient</th>
                <td>{{ ingredient.costIngredient }}</td>
            </tr>
            <tr>
                <th>LoadedByIngredient</th>
                <td>{{ ingredient.loadedByIngredient }}</td>
            </tr>
            <tr>
                <th>DescriptionIngredient</th>
                <td>{{ ingredient.descriptionIngredient }}</td>
            </tr>
            <tr>
                <th>TypeIngredient</th>
                <td>{{ ingredient.typeIngredient }}</td>
            </tr>
            <tr>
                <th>NutrimentPrincipalIngredient</th>
                <td>{{ ingredient.nutrimentPrincipalIngredient ? ingredient.nutrimentPrincipalIngredient|join(', ') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_ingredient_index') }}">back to list</a>

    <a href="{{ path('app_ingredient_edit', {'id': ingredient.id}) }}">edit</a>

    {{ include('ingredient/_delete_form.html.twig') }}
{% endblock %}
