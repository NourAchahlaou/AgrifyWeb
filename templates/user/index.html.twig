{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>User_id</th>
                <th>User_nom</th>
                <th>User_prenom</th>
                <th>User_email</th>
                <th>User_telephone</th>
                <th>User_role</th>
                <th>User_genre</th>
                <th>User_nbrabscence</th>
                <th>Username</th>
                <th>Password</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.userId }}</td>
                <td>{{ user.userNom }}</td>
                <td>{{ user.userPrenom }}</td>
                <td>{{ user.userEmail }}</td>
                <td>{{ user.userTelephone }}</td>
                <td>{{ user.userRole }}</td>
                <td>{{ user.userGenre }}</td>
                <td>{{ user.userNbrabscence }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.password }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'user_id': user.user_id}) }}">show</a>
                    <a href="{{ path('app_user_edit', {'user_id': user.user_id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}">Create new</a>
{% endblock %}
