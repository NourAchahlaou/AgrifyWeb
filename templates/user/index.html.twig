{% extends 'base.html.twig' %}

{% block title %}User Management{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        h1 {
            color: #2E5D42;
            text-align: center;
            margin-bottom: 20px;
        }

        table {
            width: 80%; /* Adjust the width as needed */
            margin: 0 auto;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 12px;
            text-align: left;
            font-size: 14px;
        }

        th {
            background-color: #F2F0D5;
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        tr:nth-child(even) {
            background-color: #F4F7F0;
        }

        a {
            color: #2E5D42;
            text-decoration: none;
            margin-right: 10px;
            transition: color 0.3s ease-in-out;
        }

        a:hover {
            color: #22C738;
            text-decoration: underline;
        }

        .no-records {
            color: #757575;
            font-style: italic;
        }

        .button {
            text-align: center;
            margin-top: 20px;

        }

        .create-new {
            display: inline-block;
            padding: 12px 20px;
            background-color: #2E5D42;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            text-align: center;
            transition: background-color 0.3s ease-in-out;
        }

        .create-new:hover {
            background-color: #22C738;
            color: #000;

        }
    </style>
{% endblock %}

{% block body %}
    <h1>User Home</h1>

    <table>
        <thead>
            <tr>
                <th>User ID</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Role</th>
                <th>Genre</th>
                <th>Absences</th>
                <th>Username</th>
                <th>Password</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.userId }}</td>
                <td>{{ user.userNom }} {{ user.userPrenom }}</td>
                <td>{{ user.userEmail }}</td>
                <td>{{ user.userTelephone }}</td>
                <td>{{ user.userRole }}</td>
                <td>{{ user.userGenre }}</td>
                <td>{{ user.userNbrabscence }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.password }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'user_id': user.userId}) }}">Show</a>
                    <a href="{{ path('app_user_edit', {'user_id': user.userId}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10" class="no-records">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="button">
        <a href="{{ path('app_user_new') }}" class="create-new">Create New User</a>
    </div>
{% endblock %}
