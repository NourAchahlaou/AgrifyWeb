{% extends 'base.html.twig' %}

{% block title %}User Details{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        h1 {
            color: #377120;
            text-align: center;
        }

        table {
            width: 60%;
            margin: 20px auto;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 12px;
            text-align: left;
        }

        th {
            background-color: #EFE6CD;
        }

        .action-buttons {
            margin-top: 20px;
            text-align: center;
        }

        .btn {
            display: inline-block;
            padding: 12px 24px;
            background-color: #377120;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            margin-right: 10px;
            cursor: pointer;
        }

        .btn:hover {
            background-color: #285e15;
        }
    </style>
{% endblock %}

{% block body %}
    <h1>User Details</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>User ID</th>
                <td>{{ user.userId }}</td>
            </tr>
            <tr>
                <th>User Name</th>
                <td>{{ user.userNom }} {{ user.userPrenom }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.userEmail }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ user.userTelephone }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ user.userRole }}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{{ user.userGenre }}</td>
            </tr>
            <tr>
                <th>Absences</th>
                <td>{{ user.userNbrabscence }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
        </tbody>
    </table>

    <div class="action-buttons">
        <a href="{{ path('app_user_index') }}" class="btn">Back to List</a>
        <a href="{{ path('app_user_edit', {'user_id': user.userId}) }}" class="btn">Edit User</a>

        {{ include('user/_delete_form.html.twig') }}
    </div>
{% endblock %}
