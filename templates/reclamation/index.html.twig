{% extends 'base.html.twig' %}

{% block title %}Reclamation index{% endblock %}

{% block body %}
    <h1>Reclamation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Rec_emp</th>
                <th>Rec_date</th>
                <th>Rec_description</th>
                <th>Rec_target</th>
                <th>Urgency</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reclamation in reclamations %}
            <tr>
                <td>{{ reclamation.id }}</td>
                <td>{{ reclamation.recEmp }}</td>
                <td>{{ reclamation.recDate ? reclamation.recDate|date('Y-m-d') : '' }}</td>
                <td>{{ reclamation.recDescription }}</td>
                <td>{{ reclamation.recTarget }}</td>
                <td>{{ reclamation.urgency }}</td>
                <td>
                    <a href="{{ path('app_reclamation_show', {'id': reclamation.id}) }}">show</a>
                    <a href="{{ path('app_reclamation_edit', {'id': reclamation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reclamation_new') }}">Create new</a>
{% endblock %}
